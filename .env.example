# Copy this file to .env and fill in real values.
# NEVER commit .env to source control.

# Database — use a secrets manager in production (AWS Secrets Manager, Vault, etc.)
DATABASE_URL="postgresql://user:password@host:5432/dbname?sslmode=require&schema=public"

# JWT — generate with: node -e "require('crypto').randomBytes(64).toString('base64')"
# Minimum 512 bits of entropy. Rotate immediately if ever exposed.
JWT_SECRET="REPLACE_WITH_512_BIT_RANDOM_SECRET"

# Swagger — set to "production" in prod to disable Swagger UI
NODE_ENV="development"

# API metadata
API_Title="Referral Track API"
API_Description="Backend REST API"
API_Version="2.0"
API_Tag="referraltrack"
PORT=8080

# CORS — comma-separated list of allowed frontend origins
ALLOWED_ORIGINS="http://localhost:3000"

# Service Request status IDs
srStatus_Draft=1
srStatus_Active=2
srStatus_Revoked=4
srStatus_Completed=5
srStatus_EnteredInError=6
srStatus_Unknown=7

# Twilio — store in secrets manager, never in source control
TWILIO_SID="REPLACE"
TWILIO_AUTH_TOKEN="REPLACE"
TWILIO_PHONE_NUMBER="+1XXXXXXXXXX"
